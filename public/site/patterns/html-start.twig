<!doctype html>
<html class="no-js{% if config.debug %}  fonts-loaded{% endif %}{% if pageModifiers %}  {{ pageModifiers }}{% endif %}" lang="{{ language.code }}" dir="{{ language.direction }}">
  <head>
    <meta charset="utf-8" />
    <title>{{ pageTitle }}</title>
    <meta name="description" content="{{ pageDescription }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/images/apple-touch-icon.png' | path }}" />
    <link rel="icon" sizes="32x32" type="image/png" href="{{ '/images/favicon-32x32.png' | path }}" />
    <link rel="icon" sizes="16x16" type="image/png" href="{{ '/images/favicon-16x16.png' | path }}" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="{{ '/images/safari-pinned-tab.svg' | path }}" color="{{ config.colors.icon }}" />
    <meta name="msapplication-TileColor" content="{{ config.colors.tile }}" />
    <meta name="theme-color" content="{{ config.colors.theme }}" />

    <!-- add any og/twitter-card stuff here -->

    {%- if config.debug %}
      <link rel="stylesheet" href="{{ '/styles/main.css' | path }}?v={{ config.hash }}" />
    {%- else %}
      <link rel="stylesheet" href="{{ '/styles/main.min.css' | path }}?v={{ config.hash }}" />
    {%- endif %}
  </head>
