{% if not attributes %}
  {% set attributes = 'muted loop playsinline' %}
{% endif %}

<div class="video{% if modifiers %}  {{ modifiers }}{% endif %}">
  <video
    class="video__element"
    {% if poster %} data-poster="{{ poster }}"{% endif %}
    {{ attributes | raw }}
  >
    {% for source in sources %}
      <source data-src="{{ source.src }}" type="{{ source.type }}" />
    {% endfor %}
  </video>
</div>
